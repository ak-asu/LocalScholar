{
  "manifest_version": 3,
  "name": "Quizzer",
  "description": "Summarize pages or selections, generate flashcards, and build reports locally using Chrome built-in AI.",
  "version": "0.1.0",
  "action": {
    "default_title": "Quizzer",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-loader.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/overlay.css",
        "content/content.js",
        "content/task-manager.js",
        "content/unified-overlay.js",
        "utils/content-extractor.js",
        "utils/ai-pipeline.js",
        "utils/timing-estimator.js",
        "data/storage.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
  
}
